<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teachify.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="key.png"/>
            <Label FontSize="Large" TextColor="#707070" HorizontalOptions="Center" Text="Forgot your password?"></Label>
            <Label FontSize="Small" Margin="45,10,45,0" TextColor="#707070" Text="To recover your password, you need to enter your email address. We will send the new password to your email!"></Label>
            <Entry Margin="20" Placeholder="Type Your Email" PlaceholderColor="#707070" x:Name="entEmail"/>
            <Button Margin="20" BackgroundColor="#ff9f00" CornerRadius="30" HeightRequest="40" 
                    TextColor="White" Text="Send" x:Name="btnSend" Clicked="btnSend_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>