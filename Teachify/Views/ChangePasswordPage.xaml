<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teachify.Views.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand">
            <Image Source="key"/>
            <Entry Placeholder="Old Password" IsPassword="True" x:Name="entOldPassword"/>
            <Entry Placeholder="New Password" IsPassword="True" x:Name="entNewPassword"/>
            <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="entConfirmPassword"/>
            <Button BackgroundColor="#ff9f00" CornerRadius="30" HeightRequest="40" 
                    TextColor="White" Text="Change Password" x:Name="btnChangePassword"
                    Clicked="btnChangePassword_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>